<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spring_greet"
    tools:context=".maingame.NewSpringHelloActivity">

    <TextView
        android:id="@+id/hello_about_spring"
        android:layout_width="624dp"
        android:layout_height="261dp"
        android:background="#4AFFFFFF"
        android:fontFamily="cursive"
        android:text="The well-known warrior disappeared, and this land welcomed a new Spring Master. You brought Spring back to your home by your power and made it rejuvenate. Outside of the Season Valley, a female hero who was waiting for her husband made a house and lived there until death."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#E6000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/success_title_hello"
        android:layout_width="468dp"
        android:layout_height="41dp"
        android:layout_marginTop="30dp"
        android:background="#1DFFFFFF"
        android:fontFamily="cursive"
        android:text="There must always be a Spring Master"
        android:textAlignment="center"
        android:textColor="#ED110101"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/next_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="cursive"
        android:onClick="onClick"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
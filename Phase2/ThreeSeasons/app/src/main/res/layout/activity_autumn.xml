<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/autumn_background"
    android:visibility="visible"
    tools:context=".maingame.MainActivity">

    <ImageButton
        android:id="@+id/red"
        android:layout_width="139dp"
        android:layout_height="125dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/red_leaf"
        android:contentDescription="@string/description"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/yellow"
        android:layout_width="134dp"
        android:layout_height="126dp"
        android:layout_marginStart="265dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/yellow_leaf"
        android:contentDescription="@string/description" />

    <ImageButton
        android:id="@+id/green"
        android:layout_width="123dp"
        android:layout_height="122dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/green_leaf"
        android:contentDescription="@string/description" />


    <TextView
        android:id="@+id/score_game2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="@string/score_game2"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score_sta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:textColor="#FFFFFF"
        android:text=""
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/maxStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="@string/maxStreak"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/maxStreak_sta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="450dp"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="320dp"
        android:fontFamily="cursive"
        android:text="@string/streak"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/streak_sta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="320dp"
        android:fontFamily="cursive"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/failures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="320dp"
        android:fontFamily="cursive"
        android:text="@string/failures"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/failures_sta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="320dp"
        android:fontFamily="cursive"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/command"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="595dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="120dp"
        android:drawablePadding="-20px"
        android:elevation="@android:dimen/notification_large_icon_width"
        android:fontFamily="cursive"
        android:gravity="center|center_vertical"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="500dp"
        android:layout_marginTop="320dp"
        android:fontFamily="cursive"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jade_sta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="560dp"
        android:layout_marginTop="200dp"
        android:fontFamily="cursive"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/frame"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginStart="555dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/jade_pendant"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="105dp"
        android:alpha="0"
        android:background="@drawable/jade_pendant"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:visibility="gone" />
</RelativeLayout>

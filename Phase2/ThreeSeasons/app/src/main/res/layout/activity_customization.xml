<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_game_background"
    tools:context=".summer.CustomizationActivity">

    <Button
        android:id="@+id/man"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="418dp"
        android:onClick="onClick"
        android:text="@string/manMode"
        android:textSize="36sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="cursive"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/shadow"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="80dp"
        android:onClick="onClick"
        android:text="@string/shadowMode"
        android:textAlignment="center"
        android:textSize="36sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="cursive"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/man"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>